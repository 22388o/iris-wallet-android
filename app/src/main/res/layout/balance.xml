<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/detailBalanceLabelTV"
        android:text="@string/total_balance"
        style="@style/light_label" />

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailBalanceTV"
            android:layout_marginEnd="@dimen/small_size"
            android:text="@string/sample_amount"
            android:gravity="right|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            style="@style/balance_tv"/>

        <TextView
            android:id="@+id/detailTickerTV"
            android:text="@string/sample_asset_ticker"
            android:textColor="@color/silver_metallic"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            style="@style/balance_tv" />

    </LinearLayout>

</LinearLayout>
